{
  "storage": {
    "s3": {
      "name": "qaplanetv1--qa-mickey--mariner-707767160287",
      "region": "us-east-1"
    }
  },
  "secrets": {
    "awsusercreds": {
      "name": "workflow-bot-g3auto",
      "key": "awsusercreds.json"
    }
  },
  "jobs": {
    "engine": {
      "labels": {
        "app": "mariner-engine"
      },
      "serviceaccount": "mariner-service-account",
      "restart_policy": "never"
    },
    "task": {
      "labels": {
        "app": "mariner-task"
      },
      "restart_policy": "never"
    }
  },
  "containers": {
    "engine": {
      "name": "mariner-engine",
      "image": "quay.io/cdis/mariner-engine:2020.12",
      "pull_policy": "always",
      "command": [
        "/mariner",
        "run",
        "$(RUN_ID)"
      ],
      "resources": {
        "limits": {
          "memory": "8Gi",
          "cpu": "800m"
        }
      }
    },
    "s3sidecar": {
      "name": "mariner-s3sidecar",
      "image": "quay.io/cdis/mariner-s3sidecar:2020.12",
      "pull_policy": "always",
      "command": [
        "/sidecar"
      ],
      "resources": {
        "limits": {
          "memory": "4Gi",
          "cpu": "500m"
        }
      },
      "securitycontext": {
        "privileged": true
      }
    },
    "gen3fusesidecar": {
      "name": "mariner-gen3fusesidecar",
      "image": "quay.io/cdis/gen3fuse-sidecar:2020.12",
      "pull_policy": "always",
      "command": [
        "/bin/bash",
        "/marinerRun.sh"
      ],
      "lifecycle": {
        "prestop": [
          "/bin/bash",
          "-c",
          "fusermount -u -z /$COMMONS_DATA"
        ]
      },
      "resources": {
        "limits": {
          "memory": "256Mi",
          "cpu": "100m"
        }
      },
      "securitycontext": {
        "privileged": true
      }
    },
    "task": {
      "name": "mariner-task",
      "image": "alpine",
      "pull_policy": "always",
      "command": [
        "/bin/sh"
      ],
      "resources": {
        "limits": {
          "memory": "512Mi",
          "cpu": "900m"
        }
      }
    }
  }
}
